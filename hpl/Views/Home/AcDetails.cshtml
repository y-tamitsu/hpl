@model hpl.Models.userModel

@{
    ViewBag.Title = "AcDetails";
}

<h2>出品情報詳細</h2>

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.id)
    </dt>
    <dd>
        ： 　　 @ViewBag.id
    </dd>
</dl>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.title)：@ViewBag.titl
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.detail)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.detail)：@ViewBag.detail
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.money)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.money)：@ViewBag.money
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.lastprice)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.lastprice)：@ViewBag.lastprice
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.time)
        </dt>
        <dd>
            <p id="RealtimeClock" style="margin-top:5px;"></p>
            <script>
                function set2fig(num) {
                    var ret;
                    if (num < 10) { ret = "0" + num; }
                    else { ret = num; }
                    return ret;
                }
                function showClock() {
                    var nowTime = new Date();
                    var nowYear = set2fig(nowTime.getFullYear());
                    var nowMonth = set2fig(nowTime.getMonth() + 1);
                    var nowDate = set2fig(nowTime.getDate());
                    var nowHour = set2fig(nowTime.getHours());
                    var nowMin = set2fig(nowTime.getMinutes());
                    var nowSec = set2fig(nowTime.getSeconds());
                    var msg = "：" + nowYear + "/" + nowMonth + "/" + nowDate + " " + nowHour + ":" + nowMin + ":" + nowSec;
                    document.getElementById("RealtimeClock").innerHTML = msg;
                }
                setInterval('showClock()', 1000);
            </script>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.lasttime)
        </dt>
        <dd>
            ：@ViewBag.lasttime
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.image)
        </dt>
        <dd>
            <img src="data:image/jpg;base64,@Model.image" alt="image" style="max-width:100%;height:370px;" data-toggle="modal" data-target="#image_myModal" />
            <div class="modal fade" id="image_myModal">
                <div class="modal-dialog">
                    <div class="modal-body">
                        <img src="data:image/jpg;base64,@Model.image" alt="image">
                    </div>
                </div>
            </div>
        </dd>
    </dl>
    <div class="col-md-offset-2 col-md-10">
        <input type="button" value="戻る" onclick="location.href='http://localhost:49405/Home/AcList'" class="btn btn-default" />
    </div>
</div>
